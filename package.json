{
  "name": "wp-theme-starter",
  "version": "1.0.0",
  "description": "WordPress theme starter with TypeScript, SCSS, and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm-run-all build:clean build:scss build:ts build:tailwind build:minify",
    "build:clean": "rimraf assets/dist",
    "dev:scss": "sass --watch assets/scss:assets/dist/css --style=expanded",
    "dev:ts": "webpack --watch --mode development",
    "dev:tailwind": "tailwindcss -i ./assets/scss/tailwind.css -o ./assets/dist/css/tailwind.css --watch",
    "build:scss": "sass assets/scss:assets/dist/css --style=compressed",
    "build:ts": "webpack --mode production",
    "build:tailwind": "tailwindcss -i ./assets/scss/tailwind.css -o ./assets/dist/css/tailwind.css --minify",
    "build:minify": "postcss assets/dist/css/*.css --replace",
    "lint": "npm-run-all --parallel lint:*",
    "lint:ts": "eslint 'assets/ts/**/*.{ts,tsx}'",
    "lint:scss": "stylelint 'assets/scss/**/*.scss'",
    "lint:fix": "npm-run-all --parallel lint:fix:*",
    "lint:fix:ts": "eslint 'assets/ts/**/*.{ts,tsx}' --fix",
    "lint:fix:scss": "stylelint 'assets/scss/**/*.scss' --fix",
    "format": "prettier --write '**/*.{js,ts,tsx,json,scss,css,md}'",
    "format:check": "prettier --check '**/*.{js,ts,tsx,json,scss,css,md}'"
  },
  "keywords": [
    "wordpress",
    "theme",
    "typescript",
    "scss",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "sass": "^1.70.0",
    "stylelint": "^16.23.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
